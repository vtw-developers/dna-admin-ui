extend type Query {
  authorities(page: Int, size: Int, sortBy: String, sortDir: String, filter: String): AuthorityPage
  authorityList(name: String): [Authority]
  authority(id: ID): Authority
}

type Authority {
  id: ID
  name: String
  detail: String
}

type AuthorityPage {
  totalElements: Int
  content: [Authority]
}
